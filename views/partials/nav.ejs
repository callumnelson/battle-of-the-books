  <% if (!user) { %>
    <script defer src="https://accounts.google.com/gsi/client"></script>
  <% } %>
</head>
<body>
  <nav class="navbar sticky-top navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <i class="fa-solid fa-book fa-2xl"></i>
        <h4 class="site-title">Battle of the Books</h4>
      </a>
      <% if (user) { %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/sections" class="<%= title === 'Sections' ? 'active' : '' %>">
                Sections
              </a>
            </li>
            <!-- Only show additional paths once a user is signed up -->
            <% if (user.profile.isSignedUp) { %>
            <li class="nav-item">
              <a class="nav-link" href="/students" class="<%= title === 'Students' ? 'active' : '' %>">
                Students
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/library" class="<%= title === 'Library' ? 'active' : '' %>">
                Library
              </a>
            </li>
            <% } %>
            <!-- ADMIN USER -->
            <% if (user.profile.role > 200) { %>
            <li class="nav-item">
              <a class="nav-link" href="/districts" class="<%= title === 'Districts' ? 'active' : '' %>">
                Districts
              </a>
            </li>
            <% } %>
            <li class="nav-item" id="logout">
              <a href="/auth/logout" class="right nav-link">
                Logout
              </a>
            </li>
            <li>
              <a href="/profile">
                <img
                  id="avatar"
                  src="<%= user.profile.avatar %>"
                  alt="<%= user.profile.name %> avatar"
                />
              </a>
            </li>
          </ul>
        </div>
      </div>
    <% } %>
  </nav>
